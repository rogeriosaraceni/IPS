<script is:inline>
    function navLinkTabsActive() {
        const currentUrl = window.location.pathname;

        $("#pills-tab a").each(function () {
            const linkPath = new URL(this.href, window.location.origin).pathname;

            if (currentUrl === linkPath) {
                $(this).addClass("active");
            }
        });
    }
    navLinkTabsActive()
</script>
